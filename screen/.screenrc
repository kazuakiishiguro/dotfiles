# set prefix for screen as C-t
escape ^Tt

# set scrollback buffer to 10000
defscrollback 10000

# enable mouse scroll
termcapinfo xterm* ti@:te@

# default shell
shell -$SHELL

# disable startup message
startup_message off

# disable visual bell
vbell off
defflow off

# enable Unicode support
defutf8 on

# show hardware status
hardstatus alwayslastline "%{= wk} %-w%{= dw} %n* %t %{-}%+w %=%D %m/%d/%Y %C "

# color
defbce on
term xterm-256color